// Place your key bindings in this file to override the defaults
[
  {
    "key": ", shift+\\",
    "command": "workbench.action.splitEditorRight",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+w l",
    "command": "workbench.action.focusRightGroup"
  },
  {
    "key": "ctrl+w h",
    "command": "workbench.action.focusLeftGroup"
  },
  {
    "key": ", -",
    "command": "workbench.action.splitEditorDown",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "shift+tab",
    "command": "workbench.action.previousEditorInGroup",
    "when": "vim.mode == 'Normal'"
  },
  {
    "key": "tab",
    "command": "workbench.action.nextEditorInGroup",
    "when": "vim.mode == 'Normal'"
  },
  {
    "key": "shift+k",
    "command": "editor.action.showHover",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "; ;",
    "command": "workbench.action.showCommands",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  {
    "key": "; f",
    "command": "workbench.action.quickOpen",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  {
    "key": ", g shift+r",
    "command": "editor.action.goToReferences",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "\\ \\",
    "command": "workbench.action.showAllEditors",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  {
    "key": ", s",
    "command": "workbench.action.gotoSymbol",
    "when": "editorTextFocus && editorFocus && vim.mode != 'Insert' && !accessibilityHelpIsShown && !accessibleViewIsShown"
  },
  {
    "key": ", e",
    "command": "workbench.view.explorer",
    "when": "editorTextFocus && (explorerViewletFocus || vim.mode == 'Normal')"
  },
  {
    "key": ", g r",
    "command": "editor.action.rename",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "shift+l",
    "command": "scrollRight",
    "when": "editorTextFocus && vim.mode == 'Normal' && vim.mode != 'Insert'"
  },
  {
    "key": "shift+h",
    "command": "scrollLeft",
    "when": "editorTextFocus && vim.mode == 'Normal' && vim.mode != 'Insert'"
  },
  {
    "key": "shift+n",
    "command": "explorer.newFile",
    "when": "explorerViewletFocus"
  },
  {
    "key": "shift+cmd+o",
    "command": "-workbench.action.gotoSymbol",
    "when": "!accessibilityHelpIsShown && !accessibleViewIsShown"
  },
  {
    "key": "f8",
    "command": "-editor.action.marker.nextInFiles",
    "when": "editorFocus"
  }
]
